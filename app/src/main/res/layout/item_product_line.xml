<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="isDetailed"
            type="boolean" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_toLeftOf="@+id/amount_icon"
            android:gravity="left"
            android:hint="@string/product_name_hint"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/amount_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toStartOf="@+id/amount_layout"
            android:background="@android:color/transparent"
            android:drawablePadding="-5dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawableTop="@drawable/ic_glass_white"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="8sp" />

        <LinearLayout
            android:id="@+id/amount_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="@{isDetailed ? View.VISIBLE : View.GONE}">

            <ImageButton
                android:id="@+id/btn_sub"
                style="@style/SquaredStyle"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:scaleX="0.6"
                android:scaleY="0.5"
                android:src="@drawable/ic_action_remove"
                android:tint="@color/colorPrimary" />

            <EditText
                android:id="@+id/final_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="64dp"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:minWidth="40dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btn_add"
                style="@style/SquaredStyle"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:src="@drawable/ic_action_add"
                android:tint="@color/colorPrimary" />
        </LinearLayout>
    </RelativeLayout>
</layout>