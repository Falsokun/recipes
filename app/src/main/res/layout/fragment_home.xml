<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/input_field"
            style="@style/TextTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_dimen"
            android:elevation="4dp"
            android:backgroundTint="@color/colorPrimary"
            android:hint="@string/enter_url_here"
            android:textColorHint="@color/colorPrimaryDarkOpaque" />

        <Button
            android:id="@+id/addReceipt"
            style="@style/EntireLineBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_field"
            android:layout_marginTop="8dp"
            android:text="@string/add_recipe" />

        <Button
            android:id="@+id/shopping_list"
            style="@style/EntireLineBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addReceipt"
            android:layout_marginTop="8dp"
            android:text="@string/shopping_list" />

        <Button
            android:id="@+id/random_recipe"
            style="@style/EntireLineBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopping_list"
            android:layout_marginTop="8dp"
            android:text="@string/random_recipe" />
    </RelativeLayout>
</layout>